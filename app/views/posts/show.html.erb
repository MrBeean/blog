<div class="intro">
  <div class="intro-post">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="post-box">
        <h1><%= @post.title %></h1>

        <p class="text-justify"><%= @post.post %></p>
        <div class="post-writer">
          <p><%= link_to @post.user.name, @post.user %></p>
        </div>
      </div>
      <% if current_user_can_edit?(@post) %>
          <%= link_to 'Исправить', edit_post_path(@post), class: 'btn btn-warning' %>
      <% end %>

      <%= link_to 'Назад', posts_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>

