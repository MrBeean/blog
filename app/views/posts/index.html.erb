<div class="intro">
  <div class="intro-home">

    <div class="jumbotron cover">
      <h1><%= t('app.name') %></h1>
      <p>Всякая перемена, даже перемена к лучшему, всегда сопряжена с неудобствами.</p>
    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% @posts.each do |post| %>
        <% if can_see_post?(post) %>
        <div class="post-box">
          <div class="row">
            <div class="col-lg-12">
              <%= link_to post do %>
                <h1><%= post.title %></h1>
              <% end %>
              <%= link_to post do %>
                  <img src="<%= asset_path('post.jpg') %>" alt="..." class="img-responsive">
              <% end %>
            </div>
            <%= link_to post do %>
              <div class="col-lg-12 post-text">
                <p><%= post.post_preview(250) %></p>

                <!--<%= link_to 'Edit', edit_post_path(post) %>-->
                <!--<%= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'} %>-->
              </div>
            <% end %>
            <div class="col-lg-12 post-writer">
              Опубликовано пользователем <%= link_to post.user.name, post.user %>,
              <%= l post.created_at.to_date, format: :default %>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>

      <nav aria-label="Page navigation" class="text-center">
        <ul class="pagination">
          <li class="disabled">
            <span>
              <span aria-hidden="true">&laquo;</span>
            </span>
          </li>
          <li class="active">
            <span>1 <span class="sr-only">(current)</span></span>
          </li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li>
            <a href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>

    </div>
  </div>
</div>
