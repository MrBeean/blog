<%= form_for(@post) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @post} %>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :post %>
          <%= f.text_area :post, class: 'form-control' %>
        </div>

        <div class="form-group">
          <p><em>Чекбокс ниже отвечает за видимость статьи для других пользователей</em></p>
          <%= f.check_box :visible %>
          <%= f.label :visible %>
        </div>

        <div class="actions">
          <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
          <%= link_to 'Назад', :back , class: 'btn btn-default' %>
        </div>

      </div>
    </div>
  </div>


<% end %>
