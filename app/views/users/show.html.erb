<div class="intro">
  <div class="intro-user">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag user_avatar(@user), class: 'center-block img-circle' %>
      <h1 class="text-center"><%= @user.name %></h1>
        <% if can_edit_user?(@user) %>
          <p class="buffer-top text-center">
            <%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-default' %>
            <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </p>
          <% if @user.posts.any? %>
            <h1><small>Твои записи:</small></h1>
            <p class="buffer-top">
              <%= render partial: 'posts/post', collection: @user.posts.order('posts.created_at DESC') %>
            </p>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
