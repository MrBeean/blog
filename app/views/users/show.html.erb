<div class="intro">
  <div class="intro-user">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag user_avatar(@user), class: 'center-block img-circle' %>
      <h1 class="text-center"><%= @user.name %></h1>
        <% if can_edit_user?(@user) %>
          <div class="buffer-top text-center">
            <%= link_to 'Сменить аватар', edit_user_path, class: 'btn btn-default' %>
            <%= link_to 'Редактировать данные', edit_user_registration_path, class: 'btn btn-default' %>
            <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
          </div>
          <% if @user.posts.any? %>
            <h1><small>Твои записи:</small></h1>
            <p class="buffer-top">
              <%= render partial: 'posts/post', collection: @user_posts %>
            </p>
              <div class="text-center">
                <%= will_paginate @user_posts, renderer: BootstrapPagination::Rails,
                                  previous_label: '&laquo;', next_label: '&raquo;' %>
              </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
